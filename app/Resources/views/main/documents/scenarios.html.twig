    {{ parent() }}
    <div class="col-10">
        <h2 class="mb-3">{{ 'documents.scenarios' | trans() }}</h2>
        <div class="mb-3">
            <a href="{{ path('main_documents') }}">&larr; назад к списку</a>
        </div>
        <ul class="mb-5">
